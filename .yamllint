---
extends: default

rules:
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  comments:
    min-spaces-from-content: 1
    require-starting-space: false

  document-start: disable

  empty-lines:
    max-end: 1

  indentation:
    indent-sequences: true
    spaces: 2

  line-length:
    max: 150
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  # For "on" key in GitHub Action yaml
  truthy:
    check-keys: false
